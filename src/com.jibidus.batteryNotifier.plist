<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>com.jibidus.battery.notifier</string>
		<key>ProgramArguments</key>
		<array>
			<string>/bin/bash</string>
			<string>${script_folder}/battery-notifier.bash</string>
		</array>
		
		<key>StandardOutPath</key>
		<string>${script_folder}/logs/battery-notifier.log</string>
		
		<key>StartInterval</key>
		<!-- In seconds -->
		<integer>60</integer>
	</dict>
</plist>
